<%= form_for @user do |f| %>
  
  <% if @user.errors.any? %>
    <h2>Errors:</h2>
      <% @user.errors.keys.each { |attr| @user.errors[attr].delete_at(1) } %> 
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
  <% end %>

  <%= f.label :email %> 
  <%= f.text_field :email %> <br>
  <%= f.label :user_name %> 
  <%= f.text_field :user_name %> <br>
  <%= f.label :password %> 
  <%= f.password_field :password %> <br>
  <%= f.submit "Sign Up" %> 
<%end%>